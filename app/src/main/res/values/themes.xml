<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GPSCompass" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorPrimaryVariant">@color/backgroundButtonColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/buttonColor1</item>
        <item name="colorSecondaryVariant">@color/buttonColor2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GPSCompass.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GPSCompass.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GPSCompass.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Text Size -->
        <item name="android:textSize">16sp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/color_text_search_bar</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/color_text_search_bar</item>
    </style>
</resources>