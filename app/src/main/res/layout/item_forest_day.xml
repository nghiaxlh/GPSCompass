<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/background_forest_hour">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconForestDay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_forest_day_test" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTimeDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/iconForestDay"
        app:layout_constraintLeft_toRightOf="@id/iconForestDay"
        tools:text='T.2, 27/2' />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTimeDay"
        app:layout_constraintLeft_toRightOf="@id/iconForestDay"
        app:layout_constraintBottom_toBottomOf="@id/iconForestDay"
        tools:text='61%' />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTempDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iconForestDay"
        app:layout_constraintBottom_toBottomOf="@id/iconForestDay"
        tools:text='19ºC | 28ºC' />
</androidx.constraintlayout.widget.ConstraintLayout>